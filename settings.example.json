{
    "galaxy.meteor.com": {
        "env": {
            "MONGO_URL": "mongodb://localhost:27017/posty",
            "ROOT_URL": "http://localhost:3000"
        }
    },
    "public": {
        "requireEmailVerification": true,
        "app": {
            "name": "Posty",
            "version": "1.0.0",
            "storage": {
                "default": "cloudinary",
                "options": {
                    "cloudinary": {
                        "defaultFolder": "community_uploads"
                    },
                    "backblaze": {
                        "bucketName": "your-bucket-name"
                    }
                }
            }
        },
        "security": {
            "maxLoginAttempts": 5,
            "lockoutDuration": 900000,
            "sessionTimeout": 604800000,
            "passwordResetTimeout": 86400000
        },
        "vapid": {
            "publicKey": "YOUR_VAPID_PUBLIC_KEY_HERE"
        }
    },
    "private": {
        "security": {
            "bcryptRounds": 12,
            "rateLimiting": {
                "enabled": true,
                "authMethods": {
                    "perConnection": 5,
                    "perMinute": 60
                }
            }
        },
        "email": {
            "from": "your-email@example.com"
        },
        "paystack": {
            "secretKey": "sk_test_your_paystack_secret_key",
            "publicKey": "pk_test_your_paystack_public_key",
            "callbackUrl": "http://localhost:3000/payment-success",
            "baseURL": "https://api.paystack.co"
        },
        "backblaze": {
            "keyId": "your_backblaze_key_id",
            "applicationKey": "your_backblaze_application_key",
            "bucketName": "your-bucket-name",
            "apiUrl": "https://api005.backblazeb2.com",
            "downloadUrl": "https://f005.backblazeb2.com"
        },
        "cloudinary": {
            "cloud_name": "your_cloudinary_cloud_name",
            "api_key": "your_cloudinary_api_key",
            "api_secret": "your_cloudinary_api_secret"
        },
        "metaApi": {
            "userAccessToken": "YOUR_FACEBOOK_USER_ACCESS_TOKEN",
            "appId": "YOUR_FACEBOOK_APP_ID",
            "appSecret": "YOUR_FACEBOOK_APP_SECRET"
        },
        "vapid": {
            "publicKey": "YOUR_VAPID_PUBLIC_KEY_HERE",
            "privateKey": "YOUR_VAPID_PRIVATE_KEY_HERE"
        }
    },
    "packages": {
        "email": {
            "service": "smtp",
            "host": "localhost",
            "port": 1025,
            "secure": false,
            "ignoreTLS": true,
            "user": "",
            "password": ""
        }
    }
}
